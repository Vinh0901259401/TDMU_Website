@model IEnumerable<TDMUAdmin.Models.MyQuestion>

<div style="visibility: hidden; display: none; width: 285px; height: 801px; margin: 0px; float: none; position: static; inset: 85px auto auto;"></div><div data-settings="{&quot;parent&quot;:&quot;#content&quot;,&quot;mind&quot;:&quot;#header&quot;,&quot;top&quot;:10,&quot;breakpoint&quot;:992}" data-toggle="sticky" class="sticky" style="top: 85px;">
    <div class="sticky-inner">
        <a class="btn btn-lg btn-block btn-success rounded-0 py-4 mb-3 bg-op-6 roboto-bold" href="@Url.Action("Create", "Forum")">Đăng câu hỏi</a>
        @if (ViewBag.AccessLevel > 0 && ViewBag.AccessLevel < 5)
        {
            <a class="btn btn-lg btn-block btn-warning rounded-0 py-4 mb-3 bg-op-6 roboto-bold" href="@Url.Action("ApprovalForQuestion", "Forum")">Duyệt câu hỏi</a>
        }
        <div class="bg-white mb-3">
            <h4 class="px-3 py-4 op-5 m-0">
                Câu hỏi gần đây:
            </h4>
            @{
                foreach (var item in Model)
                {
                    <hr class="m-0">
                    <div class="pos-relative px-3 py-3">
                        <h6 class="text-primary text-sm">
                            <a href="#" class="text-primary">@item.TieuDe</a>
                        </h6>
                        <p class="mb-0 text-sm"><span class="op-6">Đăng ngày: </span> <a class="text-black" href="#">@item.NgayDang</a> <span class="op-6">bởi: </span> <a class="text-black" href="#">@item.NguoiDang</a></p>
                    </div>
                }
            }
            <hr class="m-0">
        </div>
        <div class="bg-white text-sm">
            <h4 class="px-3 py-4 op-5 m-0 roboto-bold">
                Thông tin:
            </h4>
            <hr class="my-0">
            <div class="row text-center d-flex flex-row op-7 mx-0">
                <div class="col-sm-6 flex-ew text-center py-3 border-bottom border-right"> <a class="d-block lead font-weight-bold" href="#">@ViewBag.Topics</a> Chủ đề </div>
                <div class="col-sm-6 col flex-ew text-center py-3 border-bottom mx-0"> <a class="d-block lead font-weight-bold" href="#">@ViewBag.Posts</a> Số câu hỏi </div>
            </div>
            <div class="row d-flex flex-row op-7">
                <div class="col-sm-6 flex-ew text-center py-3 border-right mx-0"> <a class="d-block lead font-weight-bold" href="#">@ViewBag.Members</a> Số thành viên </div>
                <div class="col-sm-6 flex-ew text-center py-3 mx-0"> <a class="d-block lead font-weight-bold" href="#">@ApplicationInstance.Application["Online"]</a> Online </div>
            </div>
        </div>
    </div>
</div>
