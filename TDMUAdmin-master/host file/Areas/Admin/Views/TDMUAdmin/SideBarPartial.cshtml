 <script>
     $(document).ready(function () {
         $('#sidebar li a').click(function (e) {
             // Get the URL from the data-url attribute
             var url = $(this).data('url');

             // Save the clicked URL to local storage
             localStorage.setItem('lastClickedUrl', url);

             // Prevent the default behavior of the anchor tag
             e.preventDefault();

             // Navigate to the specified URL
             if (url) {
                 window.location.href = url;
             }
         });

         // Set the 'active' class based on the stored URL when the page loads
         var lastClickedUrl = localStorage.getItem('lastClickedUrl');
         if (lastClickedUrl) {
             // Remove 'active' class from all li elements
             $('#sidebar li').removeClass('active');

             $('#sidebar li a[data-url="' + lastClickedUrl + '"]').closest('li').addClass('active');
         }
     });
 </script>